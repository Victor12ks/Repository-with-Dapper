@model IEnumerable<McardsBanco.Models.Equipamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table table-condensed table-hover ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Marca)
            </th>
            <th></th>
        </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayName(((List<McardsBanco.Models.Marca>)ViewBag.Marca).Where(x => x.Id_Marca == item.Id_Marca).First().Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Equipamento }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Equipamento }, new { @class = "btn btn-info" })
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id_Equipamento }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
